<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobile_nfc_handler">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileNFCHandler">
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".ui.retrivePassword.ForgotPasswordActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.showNFC.ShowNFCActivity" />
        <activity android:name=".ui.nfcUNUSED.AddNFCActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main_menu.MainMenuActivity" />
        <activity android:name=".main.StartingScreenActivity">
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>